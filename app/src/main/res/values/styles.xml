<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#8BC34A</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CardStyle">
        <item name="cardBackgroundColor">#5B6E3F</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">10dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextStyle">
    <item name="android:textColor">#615D5A</item>
    <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">#615D5A</item>
        <item name="android:textColorHint">#8C8783</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:backgroundTint">#615D5A</item>

    </style>



</resources>