<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    style="@style/CardStyle"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ImageVIew to display Trip Image -->

        <ImageView
            android:id="@+id/tripImage"
            android:contentDescription="@string/app_name"
            style="@style/ImageStyle"
            app:srcCompat="@drawable/png_image"/>

        <!-- Text View to display Trip Name -->
        <TextView
            android:id="@+id/tripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tripImage"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Text VIew to display Trip Start Date -->

        <!-- Text VIew to display Trip End Date -->
        <TextView
            android:id="@+id/tripStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tripName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:layout_toEndOf="@id/textView"
            android:drawablePadding="2dp" />

        <TextView
            android:id="@+id/tripEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tripStartDate"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_toEndOf="@id/textView2"
            android:drawablePadding="2dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tripName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/tripImage"
            android:shadowColor="#000000"
            android:text="Start date:"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/tripImage"
            android:text="End date:"
            android:textColor="#ffffff" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>